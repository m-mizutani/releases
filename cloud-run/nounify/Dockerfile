FROM ghcr.io/m-mizutani/nounify:cf758e07f03047562557107ac26b873ef018eeac

COPY policy /policy

ENV NOUNIFY_POLICY=/policy
ENV NOUNIFY_ADDR=0.0.0.0:8080
ENV NOUNIFY_LOG_FORMAT=json
ENV NOUNIFY_LOG_LEVEL=debug
ENV NOUNIFY_GOOGLE_ID_TOKEN=1
ENV NOUNIFY_GITHUB_ACTION_TOKEN=1
EXPOSE 8080

ENTRYPOINT ["/nounify", "serve"]
